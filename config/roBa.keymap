            key-positions = <20 21>;
        };

        at_sign {
            bindings = <&kp AT_SIGN>;
            key-positions = <10 22>;
        };

        ESC_sign {
            bindings = <&kp ESC>;
            key-positions = <0 1>;
        };

        ctrlz {
            bindings = <&kp LC(Z)>;
            key-positions = <22 23>;
        };

        Alt {
            bindings = <&kp LEFT_ALT>;
            key-positions = <18 19>;
        };

        Alt09 {
            bindings = <&Alt09>;
            key-positions = <1 2>;
